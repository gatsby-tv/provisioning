apiVersion: apps/v1
kind: Deployment
metadata:
  name: westegg-staging
spec:
  selector:
    matchLabels:
      app: westegg-staging
  replicas: 1
  template:
    metadata:
      labels:
        app: westegg-staging
    spec:
      containers:
      - name: westegg
        image: gatsbytv/westegg:pre-alpha-v1.1
        ports:
        - containerPort: 3001
        env:
        - name: MONGO_PROTOCOL
          value: "{{ mongodb_protocol }}"
        - name: MONGO_HOST
          value: "{{ mongodb_host | default("mongodb-staging.{{ kubernetes_namespace }}") }}"
        - name: MONGO_API_USER
          value: "{{ database_api_user | default("gatsby") }}"
        - name: MONGO_API_PASS
          value: "{{ database_api_password }}"
        - name: MONGO_API_DB
          value: "gatsby"
        - name: IPFS_URL
          value: "{{ ipfs_uri | default("http://ipfs-staging-internal.{{ kubernetes_namespace }}:5001") }}"
        - name: JWT_SECRET
          value: "{{ jwt_secret }}"
        - name: WESTEGG_ENV
          value: "dev"
